# SENTINEL Log Rotation Configuration
# Generated by Ansible

{{ sentinel_log_dir }}/*.log {
    daily
    rotate 30
    compress
    delaycompress
    missingok
    notifempty
    create 0640 {{ sentinel_user }} {{ sentinel_group }}
    sharedscripts
    postrotate
        systemctl reload {{ sentinel_service_name }} > /dev/null 2>&1 || true
    endscript
}

{{ audit_log_path }} {
    daily
    rotate 90
    compress
    delaycompress
    missingok
    notifempty
    create 0640 {{ sentinel_user }} {{ sentinel_group }}
}
